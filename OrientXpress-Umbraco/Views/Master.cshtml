@using System.Web.Optimization
@inherits UmbracoTemplatePage
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Orient Xpress</title>
    @{
        var bannerCls = ViewBag.Title == "Home Page" ? "banner" : "banner-two";
    }
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/site/easing.js"></script>
    <script src="~/Scripts/site/move-top.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

    <script src="https://npmcdn.com/es6-shim@0.35.0/es6-shim.min.js"></script>
    <script src="https://npmcdn.com/zone.js@0.6.12?main=browser"></script>
    <script src="https://npmcdn.com/reflect-metadata@0.1.3"></script>
    <script src="https://npmcdn.com/systemjs@0.19.27/dist/system.src.js"></script>

</head>
<body>
    <div class="@bannerCls">
        <div class="container">
            <div class="header">
                <div class="logo">
                    <h1>
                        <a class="navbar-brand" href="/">OrientXpress</a>
                    </h1>
                </div>
                <div class="top-nav">
                    <span class="menu"> <img src="~/images/icon.png" alt="" /></span>
                    <ul class="res">
                        <li><a href="#" class="active"><span class="glyphicon glyphicon-home" aria-hidden="true"> </span></a></li>
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/gallery">Gallery</a></li>
                    </ul>
                    <!-- script-for-menu -->
                    <script>
                        $("span.menu").click(function () {
                            $("ul.res").slideToggle(300, function () {
                                // Animation complete.
                            });
                        });
                    </script>
                    <!-- /script-for-menu -->
                </div>
                <div class="clearfix"> </div>
            </div>
            @if (ViewBag.Title == "Home Page")
            {
                <div class="banner-main">
                    <div class="bann-text">
                        <h3>IT'S NICE TO MEET YOU</h3>
                        <a href="#">Click Here</a>
                    </div>
                </div>
            }
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="modal fade" id="contactModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h2 class="modal-title">Contact us</h2>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <h6>
                                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                                <span class="glyphicon glyphicon-earphone" aria-hidden="true">
                                </span> +64 21 299 0785
                            </h6>
                            <p>{{selectedEvent.Content}}</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" (click)="clearSelectedEvent()">Close</button>
                    </div>
                </div>

            </div>
        </div>
        <!--footer start here-->
        <div class="footer">
            <div class="container">
                <div class="footer-bottom">
                    <p>
                        <a href="mailto:mgbain@xtra.co.nz?Subject=Message%20to%20OrientXpress">
                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                        </a>
                    </p>
                    <ul class="ftr-nav">
                        <li><a href="/" class="active"><span class="glyphicon glyphicon-home" aria-hidden="true"> </span></a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/gallery">Gallery</a></li>
                    </ul>
                    <div class="copy-right">
                        <p>Phone: +64 21 299 0785</p>
                        <br />
                        <p>© @DateTime.Now.Year Han Jia</p>
                        <ul class="social">
                            <li><a href="#"><i> </i></a></li>
                            <li><a href="#"><i class="rss"> </i></a></li>
                            <li><a href="#"><i class="twitter"> </i></a></li>
                            <li><a href="#"><i class="dribble"> </i></a></li>
                            <li><a href="#"><i class="linked"> </i></a></li>
                            <li><a href="#"><i class="camera"> </i></a></li>
                        </ul>
                    </div>
                </div>
                <script type="text/javascript">
                    $(document).ready(function () {
                        /*
                        var defaults = {
                            containerID: 'toTop', // fading element id
                            containerHoverID: 'toTopHover', // fading element hover id
                            scrollSpeed: 1200,
                            easingType: 'linear'
                        };

                        $().UItoTop({ easingType: 'easeOutQuart' });
                        */
                    });
                </script>
                @*<a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>*@
            </div>
        </div>
    </div>
    <!--footer end here-->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>